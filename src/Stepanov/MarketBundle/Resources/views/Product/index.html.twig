{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('bundles/stepanovmarket/css/colors-theme-prod.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/stepanovmarket/css/main.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/stepanovmarket/css/login.css') }}" type="text/css" rel="stylesheet" />

{% endblock %}


{% block body -%}
    <div class="prod">

        <h1>Список Товаров</h1>

        <table class="records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Превью</th>
                    <th>Название</th>
                    <th>Цена</th>
                    <th>Создан</th>
                    <th>Дейтсвия</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.image }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.price }}</td>
                    <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <a href="{{ path('post_edit', { 'id': entity.id }) }}">Редактировать</a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

            <ul>
            <li>
                <a href="{{ path('post_new') }}">
                    Создать новый товар
                </a>
            </li>
        </ul>
    </div>
    {% endblock %}
