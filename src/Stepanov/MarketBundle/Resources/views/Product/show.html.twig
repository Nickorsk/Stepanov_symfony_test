{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/stepanovmarket/css/login.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/stepanovmarket/css/colors-theme-prod.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/stepanovmarket/css/main.css') }}" type="text/css" rel="stylesheet" />

{% endblock %}
{% block body -%}
<div class="prod">
    <h1>Товар</h1>
    <a href="{{ path('post') }}" class="back-a">Вернуться к списку товаров</a>
        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Имя</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Изображение</th>
                    <td>{{ entity.image }}</td>
                </tr>
                <tr>
                    <th>Стоимость</th>
                    <td>{{ entity.price }}</td>
                </tr>
                <tr>
                    <th>Дата создания</th>
                    <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
                </tr>
            </tbody>
        </table>

            <ul class="record_actions">
        <li>
            <a href="{{ path('post_edit', { 'id': entity.id }) }}">
                Редактировать
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
</div>
{% endblock %}
